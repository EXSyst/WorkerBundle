{
    "name": "exsyst/worker-bundle",
    "type": "library",
    "description": "Integrates the Worker component into Symfony",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "EXSyst"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5",
        "exsyst/io": "dev-master",
        "exsyst/worker": "dev-master",
        "symfony/config": "~2.6|~3.0",
        "symfony/console": "~2.6|~3.0",
        "symfony/dependency-injection": "~2.6|~3.0",
        "symfony/framework-bundle": "~2.6|~3.0",
        "symfony/http-kernel": "~2.6|~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4",
        "react/event-loop": ">=0.1 <0.5"
    },
    "suggest": {
        "react/event-loop": "Allows spawning evented (and shared) workers",
        "ext-posix": "Allows sending signals to workers",
        "ext-pcntl": "Allows using signal names (such has TERM, KILL, STOP, INT)"
    },
    "autoload": {
        "psr-4": {
            "EXSyst\\Bundle\\WorkerBundle\\": ""
        }
    }
}
